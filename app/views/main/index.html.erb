<h1 class="text-center">Query iTunes</h1>
<h2 class="text-center">Search for your favorite artist!</h2>

<div class="row">
  <%= form_tag '/search' do %>
    <div class="col-xs-10">
      <%= text_field_tag 'artist', 'arcade fire', class: 'form-control' %>
    </div>
    <div class="col-xs-2">
      <%= button_tag(type: 'submit', class: 'btn btn-primary') do %>
        Search <i class="glyphicon glyphicon-search"></i>
      <% end %>
    </div>
  <% end %>
</div>
